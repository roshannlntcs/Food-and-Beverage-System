import React from "react";

const ErrorModal = ({ isOpen, onClose, title = "Incomplete form", message = "Fill this up." }) => {
  if (!isOpen) return null;

  return (
    <div className="fixed inset-0 z-[60] flex items-center justify-center bg-black/50">
      <div className="w-[420px] max-w-[90%] rounded-2xl bg-white shadow-xl">
        <div className="flex items-center justify-between rounded-t-2xl bg-red-700 px-5 py-3">
          <h3 className="text-white text-lg font-semibold">{title}</h3>
          <button
            onClick={onClose}
            className="text-white/90 hover:text-white font-bold text-lg leading-none"
            aria-label="Close error modal"
          >
            Ã—
          </button>
        </div>

        <div className="px-6 py-5">
          <div className="mb-4 flex items-start gap-3">
            <div className="mt-0.5 h-5 w-5 flex-none rounded-full bg-red-600 text-white grid place-items-center text-sm">!</div>
            <p className="text-sm text-gray-800">{message}</p>
          </div>
          <button
            onClick={onClose}
            className="w-full rounded-full bg-red-600 px-4 py-2 text-white font-semibold hover:bg-red-700 transition"
          >
            OK
          </button>
        </div>
      </div>
    </div>
  );
};

export default ErrorModal;
