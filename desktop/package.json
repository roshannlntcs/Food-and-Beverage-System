{
  "name": "desktop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "cross-env BACKEND_PORT=4870 REACT_DEV_SERVER_URL=http://localhost:3000 concurrently -k \"npm:frontend\" \"npm:electron\"",
    "frontend": "npm --prefix ../frontend start",
    "electron": "wait-on http://localhost:3000 && electron .",
    "build:frontend": "cross-env BUILD_PATH=../desktop/app PUBLIC_URL=. REACT_APP_API_URL=http://127.0.0.1:4870 npm --prefix ../frontend run build",
    "dist": "cross-env BACKEND_PORT=4870 npm run build:frontend && electron-builder -c electron-builder.yml"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.5"
  },
  "description": "Food & Beverage POS Desktop",
  "author": "CBA POS Team roseannlanticse08@gmail.com"
}
