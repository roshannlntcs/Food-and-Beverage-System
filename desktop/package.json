{
  "name": "desktop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "cross-env REACT_DEV_SERVER_URL=http://localhost:3000 concurrently -k \"npm:frontend\" \"npm:electron\"",
    "frontend": "npm --prefix ../frontend start",
    "electron": "wait-on http://localhost:3000 && electron .",
    "build:frontend": "npm --prefix ../frontend run build",
    "dist": "npm run build:frontend && electron-builder -c electron-builder.yml"
  },
  "dependencies": {
    "electron": "^37.4.0",
    "better-sqlite3": "^12.2.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "wait-on": "^8.0.4",
    "electron-builder": "^26.0.12"
  }
}
